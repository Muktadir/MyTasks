<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'favicon.ico'%>
  <title>Welcome to My Tasks</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar my-nav">
  <div class="row-fluid">
    <div class="span4">
        <div class="row-fluid">
          <div class="span4"></div>
          <div class="span4"><%= link_to image_tag("logo.png", :style => "height: 80px"), root_path %></div>
          <div class="span4"></div>
        </div>
    </div>

    <div class="span4">
      <h1></h1>
      <h2 style="display: inline; font-size: 39px">Welcome To My Tasks</h2>
    </div>

    <div class="span4" style="text-align: right">
      <% if user_signed_in? %>
          <p class="p-header">You are currently signed in as <b><%= current_user.email %></b> </p>
          <p class="p-header">Not you?  <b><%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'btn btn-default' %></b></P>

      <% else %>
          <%= link_to "Sign Up!", new_user_registration_path %> or <%= link_to "Sign in!", new_user_session_path %>

      <% end %>
    </div>
  </div>


</div>


<div class="my-alert alert-success notify">
   <script>$.notify(notice,"success")</script>
</div>


<%= yield %>

</body>
</html>
